                     <author key="person_314781954" ref="http://viaf.org/viaf/314781954/" change="#ids-cleanup">
                        <persName type="standard" xml:lang="ar-Latn-x-lc">Ibn Ṭufayl, Muḥammad ibn ʻAbd al-Malik, <date calendar="#Gregorian" when="1185">d. 1185</date>
                        </persName>
                        <persName xml:lang="ar">ابن طفيل محمد بن عبد الملك، 494-581 هـ</persName>
                     </author>
                     <title xml:lang="ar-Latn-x-lc" key="work_4589">Risālat Ḥayy ibn Yaqẓan</title>
                     <title xml:lang="ar" key="work_4589">رسالة حي بن يقظان</title>
                     <listBibl>
