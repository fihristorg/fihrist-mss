                  <msItem xml:id="Add_18579-item1" rend="visible">
                     <author ref="http://viaf.org/viaf/90770167" key="person_90770167">
                        <persName xml:lang="fa-Latn-x-lc" type="standard">Kāshifī, Ḥusayn Vāʻiẓ, d. 1504 or 5</persName>
                        <persName xml:lang="fa">حسين واعظ كاشفى</persName>
                     </author>
                     <title xml:lang="fa-Latn-x-lc" key="work_20597" change="#ids-cleanup">Anvār Sahīlī</title>
                     <title xml:lang="fa" key="work_20597" change="#ids-cleanup">انوار سهیلی</title>
                     <incipit xml:lang="ar"/>
                     <explicit xml:lang="ar" defective="true"/>
                     <note>A modernized version of <title xml:lang="fa-Latn-x-lc">Kalīlah va Dimnah (<foreign>کلىله و دمنه</foreign>)</title>
                     </note>
                     <listBibl>
                        <bibl>For a more detailed description see Rieu 1876-83, page 755-6.</bibl>
                        <bibl>For a more detailed description see Titley 1977, page 62-3.</bibl>
                     </listBibl>
                     <textLang mainLang="fa">Persian</textLang>
                  </msItem>
