                        <persName xml:lang="fa-Latn-x-lc" type="standard">Abū Ṭāhir Ṭarsūsī, Muḥammad ibn Ḥasan</persName>
                        <persName xml:lang="fa-Latn-x-lc" type="alt">Ṭarṭūsī</persName>
