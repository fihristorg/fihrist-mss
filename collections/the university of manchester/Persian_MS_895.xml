                        <persName xml:lang="tu-Latn-x-lc" type="alt" role="scr" key="person_f859">Dervīş Maḥmūd bin ‘Abdülkerīm</persName><lb/>
                        <persName xml:lang="ar" role="scr" key="person_f859">درویش محمود ابن الحاج عبد الکریم</persName><lb/>
                        <addName xml:lang="ota" type="patronym" role="scr" key="person_f859">جغال‌زاده</addName>
