                    <physDesc>
                        <objectDesc form="codex">
                            <supportDesc material="chart">
                                <support>
                                    <material>Gold-sprinkled written surface.</material>
                                </support>
                                <extent>78 folios <dimensions type="leaf" unit="cm">
                                        <height>23.8</height>
                                        <width>15.2</width>
                                    </dimensions>
                                    <dimensions type="written" unit="cm">
