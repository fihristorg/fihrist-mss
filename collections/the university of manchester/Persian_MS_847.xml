                        <locus type="page" from="251" to="251">Page 251</locus>
                        <title xml:lang="en">Book Three</title>
                        <title xml:lang="fa">دفتر سیوم</title>
                        <title xml:lang="fa-Latn-x-lc"> Daftar-i Sīyūm</title>
                     </msItem>
                     <msItem xml:id="Persian_MS_847-item1-item4" n="4">
                        <locus type="page" from="389" to="389">Page 389</locus>
