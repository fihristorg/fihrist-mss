                        <title xml:lang="fa">دفتر چهادم</title>
                        <title xml:lang="fa-Latn-x-lc">Daftar-i Chahārum</title>
                     </msItem>
                     <msItem xml:id="Persian_MS_847-item1-item5" n="5">
                        <locus type="page" from="501" to="501">Page 501</locus>
