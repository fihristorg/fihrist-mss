                           <q xml:lang="fa">علی فاتح مهرانی علم(؟) مهر شد(؟)</q>
                           <dimensions type="seal" unit="mm">
                              <height>12</height>
                              <width>18</width>
                           </dimensions></p>
                     </seal>
                  </sealDesc>
