                            <author key="person_90059858">
                                <persName xml:lang="ara-Latn-x-lc" type="standard">‎Muḥaqqiq al-Ḥillī, Jaʿfar ibn al-Ḥasan, 1205 or 1206-1277‏</persName>
                                <persName xml:lang="ara" type="standard">محقق الحلی، جعفر ابن الحسن، ۱۲۰۵ یا ۱۲۰۶-۱۲۷۷</persName>
                                <persName xml:lang="ara-Latn-x-lc" type="alt">Muḥaqqiq Ḥillī, Jaʿfar ibn al-Ḥasan‏</persName>
                                <persName xml:lang="ara"  type="alt">محقق حلّی، جعفر بن حسن</persName>
                                <addName xml:lang="per-Latn-x-lc" type="laqab">Najm al-Dīn</addName>
                                <addName xml:lang="per" type="laqab">نجم‌الدین</addName>
                                <addName xml:lang="ara-Latn-x-lc" type="kunyah">Abu al-Qāsim</addName>
